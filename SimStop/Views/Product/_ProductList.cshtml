@model List<SimStop.Web.Models.Product.ProductViewModel>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Release Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Description</td>
                    <td>@product.ReleaseDate</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                        <a asp-action="ViewShops" asp-route-id="@product.Id" class="btn btn-primary">View Shops</a>
                        <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>
