@model SimStop.Web.Models.Product.ApplyDiscountViewModel

@{
    ViewData["Title"] = "Apply Discount";
}

<h1>Apply Discount to @Model.ProductName</h1>

<form asp-action="ApplyDiscount">
    <input type="hidden" asp-for="ShopId" />
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label asp-for="Discount" class="control-label"></label>
        <input asp-for="Discount" class="form-control" />
        <span asp-validation-for="Discount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Apply Discount" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-action="Index" asp-route-shopId="@Model.ShopId" class="btn btn-secondary">Back to Shop</a>
</p>
